<h1>Welcome to Pop's Burgers</h1>

<h2>What's on the menu to eat</h2>

<ul>
  {{!-- {{#each burgers}}
    {{#unless this.devoured}}
        {{this.burger_name}}
        <button class="devour-burger" data-id="{{this.id}}" data-newDevoured="{{this.devoured}}"> Devour it!</button>
    {{/unless}}
  {{/each}} --}}
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/unless}}
  {{/each}}

</ul>

<h2>What's been eaten:</h2>

<ul>
  {{!-- {{#each burgers}}
    {{#if this.devoured}}
        {{this.burger_name}}
    {{/if}}
  {{/each}} --}}
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="burger_name">
  </div>
  <button type="submit">Click to add!</button>
</form>
